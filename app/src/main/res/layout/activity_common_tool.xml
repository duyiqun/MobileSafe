<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:qun="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qun.mobilesafe.act.CommonToolActivity">

    <TextView
        style="@style/style_title"
        android:text="常用工具"/>

    <com.qun.mobilesafe.view.SettingItemView
        android:id="@+id/common_tool_siv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/first_normal"
        qun:backgroundType="first"
        qun:enable="false"
        qun:title="号码归属地查询">

    </com.qun.mobilesafe.view.SettingItemView>

    <com.qun.mobilesafe.view.SettingItemView
        android:id="@+id/common_tool_siv_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        qun:backgroundType="last"
        qun:enable="false"
        qun:title="常用号码查询">

    </com.qun.mobilesafe.view.SettingItemView>

    <com.qun.mobilesafe.view.SettingItemView
        android:id="@+id/common_tool_siv_applock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        qun:backgroundType="first"
        qun:enable="false"
        qun:title="程序锁管理">

    </com.qun.mobilesafe.view.SettingItemView>

    <com.qun.mobilesafe.view.SettingItemView
        android:id="@+id/common_tool_siv_dog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        qun:backgroundType="last"
        qun:title="开启电子狗">

    </com.qun.mobilesafe.view.SettingItemView>

</LinearLayout>
